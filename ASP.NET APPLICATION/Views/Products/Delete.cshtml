@model Product

@using (Html.BeginForm())
{
    <div>
        <h2>Are you sure you want to delete this item?</h2>
        <div>
            <h3>@Model.Name</h3>
            <p>@Model.Price</p>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        @Html.ActionLink("Cancel", "Index")
    </div>
}